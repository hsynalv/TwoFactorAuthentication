<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">Bıdıbıdı.com</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Member">Üye Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-info" asp-action="Index" asp-controller="Admin">Admin ana sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-info" asp-action="Edıtor" asp-controller="Member">Editor ana sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-info" asp-action="SuperAdmin" asp-controller="Member">SuperAdmin ana sayfa</a>
                </li>

                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-8">
            @RenderBody()
        </div>
        <div class="col-md-4">
            <h3>Menü</h3>
            <div style="display: grid">
                <a class="btn btn-danger btn-block mt-2" asp-action="SamsunPage" asp-controller="Member">Samsun sayfası</a>
                <a class="btn btn-danger btn-block mt-2" asp-action="ViolancePage" asp-controller="Member">Violange</a>
                <a class="btn btn-danger btn-block mt-2" asp-action="ExchangeRedirect" asp-controller="Member">Borsa Bilgileri</a>
                <a class="btn btn-info btn-block mt-2" asp-action="PasswordChange" asp-controller="Member">Şifre değiştirme</a>
                <a class="btn btn-info btn-block mt-2" asp-action="UserEdit" asp-controller="Member">Bilgi güncelleme</a>
                <a class="btn btn-info btn-block mt-2" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış yap</a>
            </div>

        </div>
    </div>
</div>
</body>
</html>